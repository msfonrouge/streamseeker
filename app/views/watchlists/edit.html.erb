<%= simple_form_for(@watchlist) do |f| %>
  <% frame_id =  dom_id(@watchlist, "title_turbo_frame") %>
  <%= turbo_frame_tag frame_id do %>
    <%= f.input :title %>
    <div class="review-actions">
      <%= button_tag type: 'submit', class: 'default1_button' do %>
        <i class="fa-solid fa-check"></i>
      <% end %>
      <%= link_to @watchlist, class: "default1_button" do %>
        <i class="fa-solid fa-ban"></i>
      <% end %>
    </div>
  <% end %>
<% end %>
